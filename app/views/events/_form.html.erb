<%= form_with(model: event, local: true) do |form| %>
  <% if event.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(event.errors.count, "error") %> prohibited this event from being saved:</h2>

      <ul>
      <% event.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :タイトル %>
    <%= form.text_field :title %>
  </div>

  <div class="field">
    <%= form.label :詳細 %>
    <%= form.text_area :body, rows:"5" %>
  </div>

  <div class="field">
    <%= form.label :開始 %>
    <%= form.datetime_select :start %>
  </div>

  <div class="field">
    <%= form.label :終了 %>
    <%= form.datetime_select :end %>
  </div>

  <%# <div class="field">
    <%= form.label :allDay %>
    <%= form.text_field :allDay %>
  </div> %>

  <div class="actions">
    <%= form.submit "イベント追加"%>
  </div>
<% end %>
